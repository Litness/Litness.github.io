<?xml version="1.0" encoding="utf-8"?>

<!-- This is a slightly less rounded button for use when there is more than one element in a container -->
<!-- Includes ripple effect on supported devices. -->
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorRipple"
    >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorPrimarySuperlight"/>
            <gradient
                android:startColor="@color/colorBackground"
                android:endColor="@color/colorPrimarySuperlight"
                android:angle="270" />
            <corners android:radius="3dp"/>
        </shape>
    </item>
</ripple>