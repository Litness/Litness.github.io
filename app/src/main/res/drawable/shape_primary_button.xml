<?xml version="1.0" encoding="utf-8"?>

<!-- This is a rounded button with large, bold text and a white outline.  Use for primary actions only. -->
<!-- Includes ripple effect on supported devices. -->
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorRipple"
    >
    <item>
        <shape
            android:padding="10dp"
            android:shape="rectangle"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:stateListAnimator="@null">
            <stroke android:width="3dp" android:color="@color/colorPrimaryOutline"/>
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorPrimaryDark"
                android:angle="270" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</ripple>